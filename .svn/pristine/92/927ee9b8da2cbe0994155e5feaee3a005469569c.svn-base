// Place all the styles related to the home controller here.
// They will automatically be included in application.css.
// You can use Sass (SCSS) here: http://sass-lang.com/
@import 'variable';

div.self-content {
  display: -webkit-flex; /* Safari */
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-flex: 1;
  flex: 1;
}

.ai, .meeting {
  display: -webkit-flex; /* Safari */
  display: flex;
  height: 100vh;
  -webkit-flex-direction: row; /* Safari */
  flex-direction: row;
  -webkit-flex: 1 1 0px;
  flex: 1 1 0px;
}

.ai > div, .meeting > div {
  width: 50%;
  max-width: 50%;
}

.info-list,
.new-information {
  position: relative;
  margin: 15px;
  border: 1px solid $border-color;
  -webkit-border-radius: 5px;
  background-color: $list-background-color;
  overflow: hidden;
}

.new-information {
  width: 350px;
  min-width: 350px;
}

.info-list .list-view,
.new-information .list-view {
  position: absolute;
  bottom: 0px;
  right: 0px;
  width: 100%;
  line-height: 38px;
  text-align: right;
  padding-right: 14px;
  background-color: $header-background-color;
  border-top: 1px solid $border-color;
  height: 36px;
  > a {
    color: #fff;
    text-decoration: none;
  }
}

#scheduled-meeting > .list-title > p {
  position: relative;
}

#scheduled-meeting > .list-title > p > a {
  font-size: 14px;
  color: #fff;
  position: absolute;
  right: 10px;
}

.list-title {
  background-color: $header-background-color;
  color: #fff;
  border-bottom: 1px solid #e9eaed;
  height: 36px;
}

.list-title > p {
  font-family: "Times New Roman", "游明朝", YuMincho, "Hiragino Mincho ProN", Meiryo, serif;
  line-height: 38px;
  text-align: center;
  font-weight: 700;
  font-size: 18px;
}

.list-content {
  background-color: $list-background-color;
  font-size: 14px;
}

.list-content a {
  position: relative;
  display: block;
  text-decoration: none;
  padding: 10px 14px;
  border-bottom: 1px solid $border-color;
  margin: 0;
  height: 40px;
  white-space: nowrap;
  color: #000;
  font-weight: bold;
}

.list-content span {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list-content p {
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-ai-meeting-name {
  width: 30%;
}

.list-scheduled-meeting-name {
  width: 40%;
}

.list-ended-meeting-name {
  width: 80%;
}

.list-ai-content {
  width: 50%;
}

.list-meeting-venue {
  width: 25%;
}

.list-date {
  width: 20%;
  right: 14px;
  position: absolute;
  text-align: right;
}

.list-timedate {
  width: 35%;
  right: 14px;
  position: absolute;
  text-align: right;
}

.button-area {
  margin-bottom: 40px;
}

#unresolved-ai-me .list-title i {
  color: red;
}

#unresolved-ai-meeting .list-title i {
  color: pink;
}

#scheduled-meeting .list-title > p > i {
  color: orange;
}

#ended-meeting .list-title i {
  color: green;
}

#whats-new .list-title i {
  color: skyblue;
}

@media screen and (min-width: 768px) and (max-width: 800px) {
.form-inline {
    .form-control{
      width: 85px;
    }
    .input-group{
      width: 91px;
    }
  }
}
@media screen and (min-width: 906px) and (max-width: 1280px){
  .form-inline {
    .form-control{
      width: 95px;
    }
    .input-group{
      width: 148px;
    }
  }
}

